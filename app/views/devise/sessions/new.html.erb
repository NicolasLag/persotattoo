<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://drscdn.500px.org/photo/140800209/q%3D80_h%3D450/74d561073c655da33872723a631c0151');">
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4 card-devise">
        <div class="light-well">
          <h3 class= "page-header black-policy text-center"><%= t('.sign_in', :default => "Sign in" )%></h3>
          <br>
          <%= form_for resource, :as => resource_name, :url => session_path(resource_name),
            html: { class: "form-horizontal center"} do |f| %>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, placeholder: "Email ", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Mot  de passe", class: "form-control" %>
            </div>


            <% if devise_mapping.rememberable? -%>
              <div><%= f.check_box :remember_me %> <%= f.label :remember_me, class:"black-policy" %></div>
            <% end -%>
              <br>
            <div>
              <%= f.submit t('.sign_in', :default => "Sign in"), class: "btn btn-success form-control" %>
            </div>
            <br>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
</div>
