<% if current_user.artist %>

  <div class="container">
    <div class="row">
      <div class="col-xs-1 col-sm-1 col-lg-1">
        <%= cl_image_tag @proposal.project.user.avatar.path, class: "avatar-large" %>
      </div>
      <div class="col-xs-11 col-sm-11 col-lg-11">
        <div class="padding-left 200px">
          <h3>Client : <strong><%= @proposal.project.user.first_name %> <%= @proposal.project.user.last_name %></strong></h3>
          <p>Ville : <%= @proposal.project.user.address_city %></p>
          <p>Pr√©sentation : <%= @proposal.project.user.presentation %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% @proposal.messages.each do |message| %>
  <% if message.user == current_user %>
    <div class="media">
      <div class="media-left">
        <%= cl_image_tag message.user.avatar.path, width: 100, height:  100, crop: :fill, class: "avatar-large" %>
      </div>
      <div class="media-body message">
        <div class="bubble bubble-left">
          <%= message.content %>
        </div>
        <div>
          <% message.images.each do |image| %>
            <%= link_to cl_image_path(image.path), class: "swipebox" do %>
              <%= cl_image_tag image.path, width: 50, height:  50, crop: :fill %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="media">
      <div class="media-body message">
        <div class="bubble bubble-right">
          <%= message.content %>
        </div>
        <div>
          <% message.images.each do |image| %>
            <% link_to image.path, class: "swipebox" do %>
              <%= cl_image_tag image.path, width: 50, height:  50, crop: :fill %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="media-right">
        <%= cl_image_tag message.user.avatar.path, width: 100, height:  100, crop: :fill, class: "avatar-large" %>
      </div>
    </div>
  <% end -%>
<% end %>

<%= simple_form_for [@proposal, @message] do |f| %>
  <%= f.input :content, label: "Nouveau message" %>
  <%= f.input :images, as: :attachinary %>
  <%= f.button :submit, "Envoyer mon message", class: "btn btn-success btn-block"%>
<% end %>
