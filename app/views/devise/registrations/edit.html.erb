<% if resource.artist %>
	<h1>vous êtes un artiste</h1>
	<div class="well">
			<div class="container-fluid">
				<div class="col-xs-12 col-md-6 col-md-offset-3">
					<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
					<%= f.error_notification %>
					<%= devise_error_messages! %>
					<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
					<p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
					<% end %>
          <h3>Modifications de compte</h3>
					<%= f.input :first_name, autofocus: true %>
        	<%= f.input :last_name, autofocus: true %>
        	<%= f.input :presentation, autofocus: true %>
        	<%= f.input :phone_number, autofocus: true %>
          <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>

          <h3>Adresse de Facturation</h3>
          <%= f.input :address_street, autofocus: true %>
          <%= f.input :address_city, autofocus: true %>
          <%= f.input :address_postal_code, autofocus: true %>
          <h3>Visuels</h3>
        	<%= f.input :url , autofocus: true %>
          <%= f.input :portfolio_photos, as: :attachinary %>
        	<%= f.input :avatar, as: :attachinary %>
				  <%= f.button :submit, "Save", class: "btn btn-success btn-block"%>

					<% end %>
				</div>
			</div>
		</div>
<% else %>
	<h1>Modifier votre profil client </h1>
		<div class="well">
			<div class="container-fluid">
				<div class="col-xs-12 col-md-6 col-md-offset-3">
					<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
					<%= f.error_notification %>
					<%= devise_error_messages! %>
					<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
					<p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
					<% end %>
					<%= f.input :email, autofocus: true %>
					<%= f.input :first_name, autofocus: true %>
        	<%= f.input :last_name, autofocus: true %>
        	<%= f.input :address_street, autofocus: true %>
        	<%= f.input :address_city, autofocus: true %>
        	<%= f.input :address_postal_code, autofocus: true %>
        	<%= f.input :presentation, autofocus: true %>
        	<%= f.input :phone_number, autofocus: true %>
        	<%= f.input :avatar, as: :attachinary %>
        	<%= f.input :gender, collection: ["male", "female"], autofocus: true %>
					<%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
					<%= f.button :submit, "Save", class: "btn btn-success btn-block"
           %>

					<% end %>
				</div>
			</div>
		</div>
<% end %>


<h3>Supprimer mon compte</h3>

<p>Mécontent <%= link_to "Supprimer Mon Compte", registration_path(resource_name), data: { confirm: "Vous êtes sûr?" }, method: :delete %></p>

<%= link_to "Retour à mon profil", :back %>
