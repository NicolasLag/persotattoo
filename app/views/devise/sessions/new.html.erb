
 <div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4 card-devise">
      <div class="light-well">
        <h3 class= "page-header text-center"><%= t('.sign_in', :default => "Sign in" )%></h3>
        <br>
        <%= form_for resource, :as => resource_name, :url => session_path(resource_name),
          html: { class: "form-horizontal center"} do |f| %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "Email ", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Mot  de passe", class: "form-control" %>
          </div>


          <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
          <% end -%>
            <br>
          <div>
            <%= f.submit t('.sign_in', :default => "Sign in"), class: "btn btn-success btn-sm btn-block btn-custom" %>
          </div>
          <br>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

